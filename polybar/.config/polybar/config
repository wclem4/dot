[module/ping-label]
type = custom/text 
label = [PING]

[module/ping-val]
type = custom/script
interval = 2
format = <label>
label = "%output%" 
exec = ping_polybar

[module/cpu-label]
type = custom/text 
label = [CPU]

[module/cpu-percent]
type = internal/cpu
interval = 1
format = <label>
label = %percentage:0%%

[module/cpu-temp]
type = custom/script
interval = 1
format = <label>
label = %output%
exec = sensors -j | jq -r 'to_entries[] | select(.key | startswith("k10temp")) | .value["Tctl"]["temp1_input"] | floor | "\(.)Â°C"' | paste -sd ' '

[module/mb-label]
type = custom/text 
label = [MB]

[module/mb-temp]
type = internal/temperature
interval = 1
format = <label>
label = %temperature-c%

[module/gpu-label]
type = custom/text 
label = [GPU]

[module/gpu-percent]
type = custom/script
interval = 1
format = <label>
label = %output%
; exec = nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits | awk 'NR==1{print $1 "% "}'
exec = cat /sys/class/drm/card*/device/gpu_busy_percent | awk '{print $1 "%"}'

[module/gpu-temp]
type = custom/script
interval = 1
format = <label>
label = %output%
; exec = nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits | awk 'NR==1{print $1 "Â°C "}'
exec = cat /sys/class/drm/card*/device/hwmon/hwmon*/temp1_input | rev | cut -c 4- | rev | awk '{print $1 "Â°C"}'

[module/mem-label]
type = custom/text 
label = [MEM]

[module/mem-percent]
type = internal/memory
interval = 1
format = <label>
label = %percentage_used%%

[module/mem-temp]
type = custom/script
interval = 1
format = <label>
label = %output%
exec = sensors -j | jq -r 'to_entries[] | select(.key | startswith("jc42-i2c")) | .value["temp1"]["temp1_input"] | floor | "\(.)Â°C"' | paste -sd ' '

