[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ff4151
secondary = #787878
alert = #bd2c40

[bar/primary]
monitor = ${env:MONITOR}
width = 100%
height = 24
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 1
line-color = ${colors.primary}
padding-left = 0
padding-right = 1
border-bottom-size = 1
border-bottom-color = ${colors.foreground-alt}
module-margin-left = 1
module-margin-right = 0
font-0 = Hack:size=10;2
font-1 = Noto Color Emoji:style=Regular:scale=12;2
font-2 = "Material\-Design\-Iconic\-Font:style=Design-Iconic-Font;2"
modules-left = i3
modules-center = date
modules-right = pulseaudio ping-label ping-val mb-label mb-temp cpu-label cpu-percent cpu-temp gpu-label gpu-percent gpu-temp mem-label mem-percent mem-temp
cursor-click = pointer
cursor-scroll = ns-resize

[bar/secondary]
monitor = ${env:MONITOR}
width = 100%
height = 24
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 1
line-color = ${colors.primary}
